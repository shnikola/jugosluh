!!! 5
%html
  %head
  %title Jugosluh
  %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
  %link{:href => '/favicon.ico', :rel => 'shortcut icon'}
  = csrf_meta_tags

  = stylesheet_link_tag "http://yui.yahooapis.com/pure/0.5.0/pure-min.css"
  = stylesheet_link_tag "application", media: 'all'

  = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:300,400,700&subset=latin,latin-ext"

  = javascript_include_tag "https://code.jquery.com/jquery-1.11.3.min.js"
  = javascript_include_tag "application"
  /[if lt IE 9]
    = javascript_include_tag "https://html5shim.googlecode.com/svn/trunk/html5.js"

  %body
    .notice= notice
    .alert= alert

    %header
      = render 'layouts/header'

    .content
      = yield
