!!! 5
%html
  %head
    %title Jugosluh
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    = favicon_link_tag '/favicon.ico'
    = stylesheet_link_tag "http://yui.yahooapis.com/pure/0.5.0/pure-min.css"
    = stylesheet_link_tag "application", media: 'all'
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:300,400,700&subset=latin,latin-ext"
    = csrf_meta_tags

  %body
    .notice= notice
    .alert= alert

    %header
      = render 'layouts/header'

    .content
      = yield

    = javascript_include_tag "application"
